<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!--*********************** Tree views **************************-->
        <record id="estate_property_tags_tree_view" model="ir.ui.view">
            <field name="name">estate.property.tree.tag.view</field>
            <field name="model">estate.property.tag</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <!--*********************** Form view **************************-->
        <record id="estate_property_tags_form_view" model="ir.ui.view">
            <field name="name">estate.property.tag.form</field>
            <field name="model">estate.property.tag</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!--*********************** Actions **************************-->
        <record id="action_property_tags" model="ir.actions.act_window">
            <field name="name">Property.tag</field>
            <field name="res_model">estate.property.tag</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smilling_face">
                    Create a property to Advertise.
                </p>
            </field>
        </record>

    </data>
</odoo>
